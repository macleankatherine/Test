pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    if (env.BUILD_NUMBER == '1') {
                        currentBuild.result = 'ABORTED'
                        sh 'echo "Don\'t build the first time"'
                    } else {
                        sh "echo 'Build number: ${env.BUILD_NUMBER}. Build'"
                    }
                }
            }
        }
    }
}
