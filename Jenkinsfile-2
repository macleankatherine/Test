pipeline {
    agent any
    stages {
        stage('Build') {
            when {
                expression {
                    "${BRANCH_NAME}" =~ /^(dev_|stable-).*/
                }
            }
            steps {
                sh 'echo "Hello World"'
            }
        }
        stage('Slay') {
            steps {
                sh 'echo "Hi ${BRANCH_NAME}"'
            }
        }
    }
}
